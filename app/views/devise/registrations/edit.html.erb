<div class="new-main">
  <%= form_with model:@user, url: user_path(@user.id), class: 'new-user', local: true do |f|%>

    <div class="form-wrapper">
      <h1>Update profiel</h1>
      <%# エラーメッセージ表示 %>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-item">
        <label for="avatar"></label>
        <%= f.file_field :avatar, id:"nickname", placeholder:"Avatar", maxlength:"20" %>
      </div>
      <div class="form-item">
        <label for="nickname"></label>
        <%= f.text_field :nickname, id:"nickname", placeholder:"Nickname", maxlength:"20" %>
      </div>
      <div class="form-item">
        <label for="email"></label>
        <%= f.email_field :email, id:"email", placeholder:"Email Address", autofocus: true %>
      </div>
      <div class="button-panel">
        <%= f.submit "Update profiel" ,class:"button" %>
      </div>
      <div class="form-footer">
        <p><%= link_to "Cansel account?", "#" %></p>
      </div>
    </div>
  <% end %>
</div>