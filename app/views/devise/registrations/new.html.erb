<div class="new-main">
  <%= form_with model:@user, url: user_registration_path, class: 'new-user', local: true do |f|%>

    <div class="form-wrapper">
      <h1>Sign In</h1>
      <%# エラーメッセージ表示 %>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-item">
        <label for="nickname"></label>
        <%= f.text_field :nickname, id:"nickname", placeholder:"Nickname", maxlength:"20" %>
      </div>
      <div class="form-item">
        <label for="email"></label>
        <%= f.email_field :email, id:"email", placeholder:"Email Address", autofocus: true %>
      </div>
      <div class="form-item">
        <label for="password"></label>
        <%= f.password_field :password, id:"password", placeholder:"Password"%>
      </div>
      <div class="form-item">
        <label for="password"></label>
        <%= f.password_field :password_confirmation, id:"password-confirmation", placeholder:"Enter same password"%>
      </div>
      <div class="button-panel">
        <%= f.submit "SIGN IN" ,class:"button" %>
      </div>
      <div class="form-footer">
        <p><%= link_to "You have a account?", new_user_session_path %></p>
      </div>
    </div>
  <% end %>
</div>
