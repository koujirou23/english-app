<%= form_with model:@user, url: user_session_path, class: "user-session", local: true do |f|%>
  <div class="form-wrapper">
    <h1>Sign In</h1>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="form-item">
      <label for="email"></label>
      <%= f.email_field :email, id:"email", placeholder:"Email Address", autofocus: true %>
    </div>
    <div class="form-item">
      <label for="password"></label>
      <%= f.password_field :password, id:"password", placeholder:"Password"%>
    </div>
    <div class="button-panel">
      <%= f.submit "SIGN IN" ,class:"button" %>
    </div>
    <div class="form-footer">
      <p><a href="#">Create an account</a></p>
      <p><a href="#">Forgot password?</a></p>
    </div>
  </div>
<% end %>
